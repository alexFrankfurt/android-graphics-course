<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <Button
            android:text="ListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp" android:layout_marginTop="27dp"
            android:id="@+id/button" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    <Button
            android:text="OpenGL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="43dp" android:id="@+id/button2"
            android:layout_alignParentBottom="true" android:layout_alignStart="@+id/button5"/>
    <Button
            android:text="Canvas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_above="@+id/button2" android:layout_alignStart="@+id/button2"
            android:layout_marginBottom="38dp"/>
    <Button
            android:text="Animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_below="@+id/button5" android:layout_alignStart="@+id/button5"/>
    <Button
            android:text="Ball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_marginTop="24dp" android:layout_below="@+id/button" android:layout_alignStart="@+id/button"/>
    <Button
            android:text="CustomView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_centerVertical="true" android:layout_alignStart="@+id/button4"/>
</RelativeLayout>